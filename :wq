#include <stdio.h>
#include <stdlib.h>

int main() {

	double num1;
	double num2;
	char operator;
	char choice='y';

	while(choice=='y'||'Y')

	{

		printf("Enter operator: ");
		scanf("%c", &operator);

		printf("Enter first number: ");
		if (scanf("%lf", &num1)!=1) {
			fprintf(stderr, "error: Input must be a number\n");
			return EXIT_FAILURE;
		}
		printf("Enter second number: ");
		if (scanf("%lf", &num2)!=1) {
			fprintf(stderr, "error: Input must be a number\n");
			return EXIT_FAILURE;
		}

	


		switch(operator) {
			case '+':
				printf("%f\n", num1 + num2);
				break;
			case '-':
				printf("%f\n", num1 - num2);
				break;
			case '*':
				printf("%f\n", num1 * num2);
				break;
			case '/':
				printf("%f\n", num1 / num2);
				break;
			default:
				printf("Invalid Operator chosen");

		}


	}

		printf("Would you love to try again (y/n):\n ");
		scanf("%c", &choice);

	return 0;

}
